---
import Button from "../components/Button.astro";

const buttons = [
    {
        title: "Ver Proyecto",
    },
    {
        title: "Ver en GitHub",
    },
];

export interface Props {
    img: string;
    title: string;
    tools: string[];
}

const { img, title, tools } = Astro.props;
---

<article class="projects__card">
    <figure class="projects__figure">
        <img src="/images/four-card.jpg" alt="" class="projects__img" />
    </figure>
    <h4 class="projects__subtitle"></h4>
    <ul class="projects__tools">
        {tools.map((tool) => <li class="projects__tool">{tool}</li>)}
    </ul>
    <div class="projects__buttons">
        {buttons.map((button) => <Button title={button.title} />)}
    </div>
</article>
